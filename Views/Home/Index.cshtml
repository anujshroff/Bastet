@{
    ViewData["Title"] = "Welcome to BASTET";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h1 class="display-4">BASTET</h1>
            <p class="lead mb-4">Badass Subnetting Tools for Enhanced Transmission</p>
            
            <div class="card mt-4 shadow-sm">
                <div class="card-body">
                    <h2 class="mb-3">IPv4 Subnet Management Tool</h2>
                    <p class="mb-4">
                        Easily track and manage your IPv4 subnets with hierarchical organization and detailed information.
                    </p>
                    
                    <a asp-controller="Subnet" asp-action="Index" class="btn btn-primary btn-lg">
                        Get Started
                    </a>
                </div>
            </div>
            
            <div class="row mt-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Organize Subnets</h5>
                            <p class="card-text">Create parent-child relationships between subnets to maintain proper hierarchy.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">Track Usage</h5>
                            <p class="card-text">See available and allocated IP ranges within each subnet.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">CIDR Support</h5>
                            <p class="card-text">Full support for CIDR notation and subnet calculations.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
