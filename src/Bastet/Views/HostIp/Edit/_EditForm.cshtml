@model EditHostIpViewModel

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Host IP Details</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="IP" class="form-label">IP Address</label>
                <input asp-for="IP" class="form-control" readonly />
                <span asp-validation-for="IP" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="form-text">Optional descriptive name for this host IP.</div>
            </div>
            
            <input type="hidden" asp-for="SubnetId" />
            <input type="hidden" asp-for="RowVersion" />
            
            <div class="d-flex justify-content-between mt-4">
                <a asp-controller="HostIp" asp-action="Index" asp-route-subnetId="@Model.SubnetId" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                @inject Bastet.Services.IUserContextService EditFormUserContext
                @if (EditFormUserContext.UserHasRole(Bastet.Models.ApplicationRoles.Edit))
                {
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                }
            </div>
        </form>
    </div>
</div>
