@model DeleteHostIpViewModel

<div class="mb-4">
    <h1>Delete Host IP</h1>
    <p class="lead">Confirm deletion of host IP <code>@Model.IP</code></p>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mb-4">
        <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Error</h4>
        <p class="mb-0">@TempData["ErrorMessage"]</p>
    </div>
}
