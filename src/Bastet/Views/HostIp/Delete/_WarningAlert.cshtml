@model DeleteHostIpViewModel

<div class="alert alert-danger mb-4">
    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Warning!</h4>
    <p>
        You are about to delete host IP <strong><code>@Model.IP</code></strong>.
        @if (!string.IsNullOrEmpty(Model.Name))
        {
            <span>(<strong>@Model.Name</strong>)</span>
        }
    </p>
    <p class="mb-0">This action cannot be undone. The deleted host IP will be moved to an archive table.</p>
</div>
