<script>
    // Wait for document ready
    document.addEventListener('DOMContentLoaded', function () {
        const ipInput = document.getElementById('ipAddressInput');
        
        // Add event listener for form submission
        const form = ipInput?.closest('form');
        form?.addEventListener('submit', function (e) {
            // Form validation will be handled by ASP.NET's validation
            // This is just for any additional client-side validation if needed
        });
        
        // Optionally add input validation for IP format as user types
        ipInput?.addEventListener('input', function() {
            validateIpFormat(this);
        });
        
        // Focus the IP input field when the page loads
        if (ipInput) {
            ipInput.focus();
        }
    });
    
    // Function to validate IP address format (basic client-side validation)
    function validateIpFormat(inputElement) {
        const ipPattern = /^(\d{1,3}\.){0,3}\d{0,3}$/; // Partial IP pattern for validation during typing
        
        if (inputElement.value && !ipPattern.test(inputElement.value)) {
            inputElement.setCustomValidity('Please enter a valid IPv4 address (format: xxx.xxx.xxx.xxx)');
        } else {
            inputElement.setCustomValidity('');
        }
    }
</script>
