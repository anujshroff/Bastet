@model int

<div class="alert alert-info">
    <p class="mb-0">No host IP assignments have been added to this subnet yet.</p>
</div>
@inject Bastet.Services.IUserContextService EmptyStateUserContext
@if (EmptyStateUserContext.UserHasRole(Bastet.Models.ApplicationRoles.Edit))
{
    <div class="text-center mt-3">
        <a asp-action="Create" asp-route-subnetId="@Model" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Host IP
        </a>
    </div>
}
