@model dynamic

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Subnet" asp-action="Index">Subnets</a></li>
            <li class="breadcrumb-item"><a asp-controller="Subnet" asp-action="Details" asp-route-id="@Model.SubnetId">@Model.SubnetName</a></li>
            <li class="breadcrumb-item active" aria-current="page">Host IP Assignments</li>
        </ol>
    </nav>
    <div class="d-flex justify-content-between align-items-center">
        <h1>Host IP Assignments</h1>
        @inject Bastet.Services.IUserContextService IndexHeaderUserContext
        @if (IndexHeaderUserContext.UserHasRole(Bastet.Models.ApplicationRoles.Edit))
        {
            <a asp-action="Create" asp-route-subnetId="@Model.SubnetId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Host IP
            </a>
        }
    </div>
    <p class="lead">Subnet: @Model.SubnetName (@Model.NetworkAddress/@Model.Cidr)</p>
</div>
