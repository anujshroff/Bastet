@model Bastet.Models.ViewModels.AzureImportViewModel

<div class="alert alert-info">
    <i class="bi bi-info-circle"></i> 
    Select an Azure Subscription to view compatible Virtual Networks.
</div>

<div id="subscription-loading" class="text-center py-3">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading subscriptions...</span>
    </div>
    <p class="mt-2">Loading subscriptions...</p>
</div>

<div id="subscription-error" class="alert alert-danger d-none">
    <i class="bi bi-exclamation-triangle"></i>
    <span id="subscription-error-message"></span>
</div>

<div id="subscription-selection" class="d-none">
    <div class="form-group mb-3">
        <label for="subscription-select" class="form-label">Subscription</label>
        <select id="subscription-select" class="form-select">
            <option value="" disabled selected>-- Select a subscription --</option>
        </select>
    </div>
    
    <div class="d-grid gap-2">
        <button id="select-subscription-btn" class="btn btn-primary" disabled>
            Next: Select VNet <i class="bi bi-arrow-right"></i>
        </button>
    </div>
</div>

<div id="no-subscriptions" class="alert alert-warning d-none">
    <i class="bi bi-exclamation-triangle"></i>
    No subscriptions found. Please check your Azure credentials.
</div>
