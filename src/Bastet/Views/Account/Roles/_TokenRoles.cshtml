@{
    var tokenRoles = ViewData["TokenRoles"] as IEnumerable<string> ?? Enumerable.Empty<string>();
}

<div class="card h-100">
    <div class="card-header bg-info text-white">
        <h4 class="mb-0">
            <i class="bi bi-key"></i> Token / Authentication Roles
        </h4>
    </div>
    <div class="card-body">
        @if (tokenRoles.Any())
        {
            <div class="list-group">
                @foreach (var role in tokenRoles)
                {
                    <div class="list-group-item">
                        <i class="bi bi-tag me-2"></i>
                        <span class="fw-bold">@role</span>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                No additional authentication token roles found.
            </div>
        }
        <div class="mt-3 small text-muted">
            <p>These roles come directly from your authentication token and include all roles assigned to you, including Bastet application roles if they exist in your token.</p>
        </div>
    </div>
</div>
